<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pack.clap.InformationActivity"
    android:orientation="vertical"
    android:background="@color/color_Blue">

    <TextView
        android:id="@+id/titleinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informations"
        android:textSize="30dp"
        android:gravity="center" />

    <TableLayout
        android:id="@+id/tablelayout"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp">

        <TextView android:text="EDT" android:background="@drawable/cell_shapes" android:padding="10dp" android:gravity="center" android:textSize="20dp"/>

        <TableRow>
            <TextView android:text="8-10h" android:background="@drawable/cell_shapes" android:padding="10dp" android:gravity="center" android:textSize="20dp"/>
            <TextView android:id="@+id/row1" android:text="8-10h" android:background="@drawable/cell_shapes" android:padding="10dp" android:gravity="center" android:textSize="20dp"/>
        </TableRow>

        <TableRow>
            <TextView android:text="10-12h" android:background="@drawable/cell_shapes" android:padding="10dp" android:gravity="center" android:textSize="20dp"/>
            <TextView android:id="@+id/row2" android:text="8-10h" android:background="@drawable/cell_shapes" android:padding="10dp" android:gravity="center" android:textSize="20dp"/>
        </TableRow>

        <TableRow >
            <TextView android:text="12-14h" android:background="@drawable/cell_shapes" android:padding="10dp" android:gravity="center" android:textSize="20dp"/>
            <TextView android:text="Pause" android:background="@drawable/cell_shapes" android:padding="10dp" android:gravity="center" android:textSize="20dp"/>
        </TableRow>

        <TableRow >
            <TextView android:text="14-16h" android:background="@drawable/cell_shapes" android:padding="10dp" android:gravity="center" android:textSize="20dp"/>
            <TextView android:id="@+id/row4" android:text="8-10h" android:background="@drawable/cell_shapes" android:padding="10dp" android:gravity="center" android:textSize="20dp"/>
        </TableRow>

        <TableRow >
            <TextView android:text="16-18h" android:background="@drawable/cell_shapes" android:padding="10dp" android:gravity="center" android:textSize="20dp"/>
            <TextView android:id="@+id/row5" android:text="8-10h" android:background="@drawable/cell_shapes" android:padding="10dp" android:gravity="center" android:textSize="20dp"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/informations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Informations"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/titleinfo" />

    <Button
        android:id="@+id/returnqr"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:background="@drawable/button_boder"
        app:layout_constraintTop_toBottomOf="@id/informations" />

</LinearLayout>
